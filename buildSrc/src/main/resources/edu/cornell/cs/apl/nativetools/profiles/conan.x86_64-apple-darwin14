cross_triple=x86_64-apple-darwin14
toolchain=/usr/$cross_triple/bin

[settings]
os=Macos
arch=x86_64
compiler=clang
compiler.version=3.8
compiler.libcxx=libstdc++11
build_type=Release

[env]
AR=$toolchain/ar
AS=$toolchain/as
CC=$toolchain/cc
CXX=$toolchain/c++
RANLIB=$toolchain/ranlib
STRIP=$toolchain/strip
PKGCONFIG=$toolchain/pkg-config
